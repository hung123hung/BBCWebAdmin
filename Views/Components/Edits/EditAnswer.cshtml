@using BBCWebAPI.Models;

<!DOCTYPE html>
<html>

<head>
    <title>Edit</title>
    <link rel="stylesheet" href="~/homepage/bower_components/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/components/css/Edit.css">
</head>

<body>
    <div>
        <form action="/HomePage/ListQuestionPage/ListAnswerPage/EditAnswerPage/UpdateAnswer" method="post">
            <div class="row">
                <div class="col-md-6">
                    <input type="hidden" asp-for="ID" />
                    <div class="form-group">
                        <label>Content</label><br />
                        <textarea class="txtEdit" name="content">@ViewBag.answerItem.Content</textarea>
                    </div>
                    <div class="form-group">
                        <label>Correct</label><br />
                        <textarea class="txtEdit" name="correct">@ViewBag.answerItem.Correct</textarea>
                    </div>
                </div>
            </div>
            <div class="row">
                <input class="btnSave" type="submit" name="Save" value="Save" />
            </div>

        </form>

    </div>

</body>

</html>