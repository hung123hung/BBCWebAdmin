@using BBCWebAPI.Models;

<!DOCTYPE html>
<html>

<head>
    <title>Edit</title>
    <link rel="stylesheet" href="~/homepage/bower_components/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/components/css/Edit.css">
</head>

<body>
    <div>
        <form action="/HomePage/EditLessonPage/UpdateLesson" method="post">
            <div class="row">
                <div class="col-md-6">
                    <input type="hidden" asp-for="ID" />
                    <div class="form-group">
                        <label>Name Lesson</label><br />
                        <textarea class="txtEdit" name="nameLesson">@ViewBag.lessonItem.Name</textarea>
                    </div>
                    <div class="form-group">
                        <label>Year</label><br />
                        <textarea class="txtEdit" name="year">@ViewBag.lessonItem.Year</textarea>
                    </div>
                    <div class="form-group">
                        <label>AudioURLOnline</label><br />
                        <textarea class="txtEdit" name="audioURLOnline">@ViewBag.lessonItem.FileURLOnline</textarea>
                    </div>
                    <div class="form-group">
                        <label>AudioURLDowload</label><br />
                        <textarea class="txtEdit" name="audioURLDowload">@ViewBag.lessonItem.FileURLDowload</textarea>
                    </div>
                    <div class="form-group">
                        <label>ImageURL</label><br />
                        <textarea class="txtEdit" name="imageURL">@ViewBag.lessonItem.ImageURL</textarea>
                    </div>
                </div>
                <div class="col-md-6">                    
                    <div class="form-group">
                        <label>Transcript</label><br />
                        <textarea class="txtTranscript" name="transcript">@ViewBag.lessonItem.Transcript</textarea>
                    </div>
                    <div class="form-group">
                        <label>Actor</label><br />
                        <textarea class="txtEdit" name="actor">@ViewBag.lessonItem.Actor</textarea>
                    </div>
                    <div class="form-group">
                        <label>Summary</label><br />
                        <textarea class="txtEdit" name="summary">@ViewBag.lessonItem.Sumary</textarea>
                    </div>
                    <div class="form-group">
                        <label>Vocabulary</label><br />
                        <textarea class="txtEdit" name="vocabulary">@ViewBag.lessonItem.Vocabulary</textarea>
                    </div>
                </div>
            </div>
            <div class="row">
                <input class="btnSave" type="submit" name="Save" value="Save" />
            </div>
            
        </form>

    </div>

</body>

</html>