@using BBCWebAPI.Models;

<!DOCTYPE html>
<html>

<head>
    <title>Edit</title>
    <link rel="stylesheet" href="~/homepage/bower_components/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/components/css/Detail.css">
</head>

<body>
    <div>
        <form  method="post">
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label class="lbl">Name Lesson</label><br />
                <label class="lblDetail" name="nameLesson">@ViewBag.lessonItem.Name</label>
            </div>
            <div class="form-group">
                <label class="lbl">Year</label><br />
                <label class="lblDetail" name="year">@ViewBag.lessonItem.Year</label>
            </div>
            <div class="form-group">
                <label class="lbl">AudioURLOnline</label><br />
                <label class="lblDetail" name="audioURLOnline">@ViewBag.lessonItem.FileURLOnline</label>
            </div>
            <div class="form-group">
                <label class="lbl">AudioURLDowload</label><br />
                <label class="lblDetail" name="audioURLDowload">@ViewBag.lessonItem.FileURLDowload</label>
            </div>
            <div class="form-group">
                <label class="lbl">ImageURL</label><br />
                <label class="lblDetail" name="imageURL">@ViewBag.lessonItem.ImageURL</label>
            </div>
            <div class="form-group">
                <label class="lbl">Transcript</label><br />
                <label class="lblDetail" name="transcript">@ViewBag.lessonItem.Transcript</label>
            </div>
            <div class="form-group">
                <label class="lbl">Actor</label><br />
                <label class="lblDetail" name="actor">@ViewBag.lessonItem.Actor</label>
            </div>
            <div class="form-group">
                <label class="lbl">Summary</label><br />
                <label class="lblDetail" name="summary">@ViewBag.lessonItem.Sumary</label>
            </div>
            <div class="form-group">
                <label class="lbl">Vocabulary</label><br />
                <label class="lblDetail" name="vocabulary">@ViewBag.lessonItem.Vocabulary</label>
            </div>
            <div class="form-group">
                <label class="lbl">Created Date</label><br />
                <label class="lblDetail" name="vocabulary">@ViewBag.lessonItem.CreatedDate</label>
            </div>
            <div class="form-group">
                <label class="lbl">Updated Date</label><br />
                <label class="lblDetail" name="vocabulary">@ViewBag.lessonItem.UpdatedDate</label>
            </div>
            <div class="form-group">
                <input class="btnBack" type="button" onclick="history.go(-1); return false;" name="Back" value="Back" />
            </div>
        </form>
    </div>
</body>

</html>